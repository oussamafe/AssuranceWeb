{% trans_default_domain 'FOSUserBundle' %}

<div class="kt-login__signin">
    <div class="kt-login__head">
        <h3 class="kt-login__title">Modifier Mot de Passe</h3>
    </div>
{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'kt-form' } }) }}
    {% if not form.vars.valid %}
        {% for child in form.children %}
            {% for error in child.vars.errors %}
                <div class="alert alert-danger">
                    <div class="alert-icon"><i class="flaticon-warning"></i></div>
                    <div class="alert-text">{{ error.message }}</div>
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}
    <div class="form-group">
        <ul>
            <li>{{ form_label(form.current_password) }}</li>
        </ul>
        {{ form_widget(form.current_password, {'attr': {'class': 'form-control' , 'placeholder': 'form.current_password'|trans }}) }}
    </div>
    <div class="form-group">
        <ul>
            <li>{{ form_label(form.plainPassword.first) }}</li>
        </ul>
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control' , 'placeholder': 'form.password'|trans }}) }}
    </div>
    <div class="form-group">
        <ul>
            <li>{{ form_label(form.plainPassword.second) }}</li>
        </ul>
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control' , 'placeholder': 'form.password_confirmation'|trans }}) }}
    </div>
    {{ form_widget(form) }}
    <div class="kt-login__actions">
        <button id="_submit" class="btn btn-brand btn-elevate kt-login__btn-primary" name="_submit" > {{ 'change_password.submit'|trans }}</button>
    </div>
{{ form_end(form) }}
</div>