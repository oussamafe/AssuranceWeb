
{% trans_default_domain 'FOSUserBundle' %}
    {% if  is_granted("IS_AUTHENTICATED_FULLY") %}
        <script>
            window.location.replace("{{ path("homepage") }}");
        </script>
    {% endif %}
<div class="kt-login__signin">
    <div class="kt-login__head">
        <h3 class="kt-login__title">Inscription</h3>
    </div>

    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'kt-form'}}) }}
    {% if not form.vars.valid %}
            {% for child in form.children %}
                {%for error in child.vars.errors%}
                    <div class="alert alert-danger" >
                        <div class="alert-icon"><i class="flaticon-warning"></i></div>
                        <div class="alert-text">{{error.message}}</div>
                    </div>
                {%endfor%}
            {%endfor%}
    {%endif%}


    <div class="form-group">
        {{ form_widget(form.email, {'attr': {'class': 'form-control' , 'placeholder': 'form.email'|trans}}) }}

    </div>
    <div class="form-group">
        {{ form_widget(form.username, {'attr': {'class': 'form-control' , 'placeholder': 'form.username'|trans }}) }}
    </div>

    <div class="form-group">
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control' , 'placeholder': 'form.password'|trans }}) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control' , 'placeholder': 'form.password_confirmation'|trans }}) }}
        {{ form_errors(form.plainPassword.first , {'attr': {'id': 'error' }}) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.first_name, {'attr': {'class': 'form-control' , 'placeholder': 'Pr√©nom' }}) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.last_name, {'attr': {'class': 'form-control' , 'placeholder': 'Nom' }}) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.address, {'attr': {'class': 'form-control' , 'placeholder': 'Addresse' }}) }}
    </div>
    <div class="form-group" align="middle">
        <div class="kt-radio-inline">
            {% for child in form.gender %}

                <label class="kt-radio kt-radio--brand"> {{ form_label(child) }} {{ form_widget(child)}} <span></span></label>


            {% endfor %}
        </div>
    </div>
    <div align="middle">
        {{ form_widget(form.recaptcha)}}
    </div>
    {{ form_widget(form) }}
    <div class="kt-login__actions">
        <input class="btn btn-brand btn-elevate kt-login__btn-primary" type="submit"
               value="{{ 'registration.submit'|trans }}"/>
    </div>
    <br>
    {{ form_end(form) }}
</div>
<script src="{{ asset('jQuery/jquery-3.3.1.js') }}"></script>
<script>

    $(function()
    {
            $("li").css('color','red');
    });
</script>

