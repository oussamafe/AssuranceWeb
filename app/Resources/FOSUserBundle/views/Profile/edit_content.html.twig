{% trans_default_domain 'FOSUserBundle' %}

<div class="kt-login__signin">
    <div class="kt-login__head">
        <h3 class="kt-login__title">Modifier Profile</h3>
    </div>
{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'kt-form' } }) }}
    {% if not form.vars.valid %}
        {% for child in form.children %}
            {% for error in child.vars.errors %}
                <div class="alert alert-danger">
                    <div class="alert-icon"><i class="flaticon-warning"></i></div>
                    <div class="alert-text">{{ error.message }}</div>
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}

    <div class="form-group" >
        <ul>
            <li>{{ form_label(form.username) }}</li>
        </ul>
        {{ form_widget(form.username, {'attr': {'class': 'form-control' , 'placeholder': 'form.username'|trans }}) }}
    </div>

    <div class="form-group">
        <ul>
            <li>{{ form_label(form.email) }}</li>
        </ul>
        {{ form_widget(form.email, {'attr': {'class': 'form-control' , 'placeholder': 'form.email'|trans}}) }}
    </div>
    <div class="form-group">
        <ul>
            <li>{{ form_label(form.current_password) }}</li>
        </ul>
        {{ form_widget(form.current_password, {'attr': {'class': 'form-control' , 'placeholder': 'form.current_password'|trans }}) }}
    </div>
    <div class="form-group">
        <ul>
            <li>{{ form_label(form.first_name) }}</li>
        </ul>
        {{ form_widget(form.first_name, {'attr': {'class': 'form-control' , 'placeholder': 'Pr√©nom' }}) }}
    </div>
    <div class="form-group">
        <ul>
            <li>{{ form_label(form.last_name) }}</li>
        </ul>
        {{ form_widget(form.last_name, {'attr': {'class': 'form-control' , 'placeholder': 'Nom' }}) }}
    </div>
    <div class="form-group">
        <ul>
            <li>{{ form_label(form.address) }}</li>
        </ul>
        {{ form_widget(form.address, {'attr': {'class': 'form-control' , 'placeholder': 'Adresse' }}) }}
    </div>
    <div class="form-group" align="middle">
        <div class="kt-radio-inline">
            {% for child in form.gender %}

                <label class="kt-radio kt-radio--brand"> {{ form_label(child) }} {{ form_widget(child)}} <span></span></label>


            {% endfor %}
        </div>
    </div>
    {{ form_widget(form) }}
    <div class="kt-login__actions">
        <button id="_submit" class="btn btn-brand btn-elevate kt-login__btn-primary" name="_submit" > {{ 'profile.edit.submit'|trans }}</button>
    </div>
{{ form_end(form) }}
</div>