{% extends 'base.html.twig' %}

{% block content %}

    <style>
        .carousel-inner {
            width: 70vw;
            height: 70vh;
        }
    </style>
    <section id="intro1" class="clearfix">
    </section>

    <section id="features">
        <div class="container">
            <div class="row feature-item">
                <div class="col-lg-6 wow fadeInUp" style="visibility: visible; animation-name: fadeInUp;">
                    <img src="{{ asset('uploads/'~actualite.image~'') }}" class="img-fluid" alt="">
                </div>
                <div class="col-lg-6 wow fadeInUp pt-5 pt-lg-0" style="visibility: visible; animation-name: fadeInUp;">
                    <h4 style="color:#252161">{{ actualite.titre }}</h4>
                    <h6 style="font-size:13.28px;"><i class="fa fa-list-alt"></i> {{ actualite.idCat.nomCategorie }}
                    </h6>
                    <h5 style="font-size:13.28px;"><i class="fa fa-clock-o"></i> Publi√©
                        le {{ actualite.datePublication|localizeddate('none', 'none', app.request.locale, "Europe/Paris", "cccc d MMMM Y") }}
                    </h5>

                    <p>
                        {{ actualite.description }}
                    </p>
                </div>
            </div>
        </div>
    </section>
    <section id="testimonials">
        <div class="container">
            <header class="section-header">
                <h3>Album De Photos</h3>
            </header>

            <div class="row justify-content-center">
                <div id="carouselExampleIndicators" class="carousel slide carousel-fade" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        {% for i  in 1..images|length %}
                            <li data-target="#carouselExampleIndicators" data-slide-to="{{ i }}"></li>
                        {% endfor %}
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="{{ asset('uploads/'~actualite.image~'') }}">
                        </div>
                        {% for img in images %}
                            <div class="carousel-item">
                                <img class="d-block w-100" src="{{ asset('uploads/'~img.url~'') }}">
                            </div>
                        {% endfor %}
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </section>
    <section id="testimonials">
        <div class="container">
            <header class="section-header">
                <h3>Commentaires</h3>
            </header>
            <div class="row justify-content-center">
                {% include '@FOSComment/Thread/async.html.twig' with {'id': actualite.id } %}
            </div>
        </div>
    </section>
{% endblock %}