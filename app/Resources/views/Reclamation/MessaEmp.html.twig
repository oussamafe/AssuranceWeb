
{% extends 'baseAdmin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('back/assets/vendors/custom/datatables/datatables.bundle.css') }}" rel="stylesheet"
          type="text/css"/>
    <link rel="stylesheet" href="{{ asset('css/design.css') }}">

{% endblock %}
{% block content %}
    <div class="message">
    <div id ="div" >
    <script src="{{ asset ('jquery/jquery-3.3.1.js') }}"></script>
    <section id="intro1" class="clearfix">
    </section>


        <table class="table table-striped- table-bordered table-hover table-checkable" >

            <tbody>

            {% for post in disc %}
                <tr>
                    {% if post.dest == 0 %}
                        <td>{{ post.idAdmin }}</td>
                    {% else %}
                        <td>{{ post.idEmp }}</td>
                    {% endif %}
                    <td>{{ post.mgs }}</td>

                </tr>


            {% endfor %}

            </tbody>
        </table>
    </div>
        <input type="text" id="mg"> <br>
        <input type="submit" id="send" value="envoyer">

    </div>

<script>

$("#div").mousemove(function () {
    $.ajax({
        type: 'POST',
        url: '{{ absolute_url(asset('')) }}app_dev.php/admin/DiscEp',
        success:function(reponse){
            ("#div").html(reponse);
        }
    })
})






    $(function () {


            $("#send").on("click", function () {
                var mgs = $("#mg").val();
                $.ajax(
                    {
                        type: 'POST',
                        url: '{{ absolute_url(asset('')) }}app_dev.php/admin/SendMEmp',
                        data: {mgs: mgs},
                        success:function (response) {
                            $("#div").html(response);

                        }

                    })

$("#mg").val('');

            });



        });

    </script>


{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('back/assets/vendors/custom/datatables/datatables.bundle.js') }}"
            type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('#kt_table_2').DataTable();
        });
    </script>
{% endblock %}


