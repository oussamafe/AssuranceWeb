{% extends ('baseAdmin.html.twig') %}

{% block content %}


    <div class="span7">
        <div class="widget stacked widget-table action-table">

            <div class="widget-header">
                <i class="icon-th-list"></i>
                <h3>Les demandes d'ajout des publicit√©s</h3>
            </div> <!-- /widget-header -->

            <div class="widget-content">

                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Description</th>

                        <th>Utilisateur</th>
                        <th class="td-actions"></th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for publicite in publicites %}
                        <tr>
                            <td>{{ publicite.idf }}</td>
                            <td>{{ publicite.descriptionf | raw }}</td>

                            <td></td>
                            <td class="td-actions">



                                <a href="{{ path('validPub' , { 'id': publicite.idf }) }}" class ="btn btn-success btn-xs">Valider</a>
                                <a href="{{ path('refusPub' , { 'id': publicite.idf }) }}" class ="btn btn-danger btn-xs">Refuser</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div> <!-- /widget-content -->

        </div> <!-- /widget -->
    </div>
{% endblock %}