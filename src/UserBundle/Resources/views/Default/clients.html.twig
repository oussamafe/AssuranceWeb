{% extends 'baseAdmin.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('back/assets/vendors/custom/datatables/datatables.bundle.css') }}" rel="stylesheet"
          type="text/css"/>

{% endblock %}

{% block content %}
    <div class="kt-portlet__body">

        <!--begin: Datatable -->
        <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_2">
            <thead>
            <tr>
                <th>ID</th>
                <th>{{ 'form.email'|trans({}, 'FOSUserBundle') }}</th>
                <th>{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</th>
                <th>Rôle</th>
                <th>Date D'insciption</th>
                <th>Dernière Connexion</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.username }}</td>
                    <td>
                        {% if user.roles[0] == "ROLE_USER" %}
                            Client
                        {% elseif user.roles[0] == "ROLE_SUPER_ADMIN" %}
                            Administrateur
                        {% elseif user.roles[0] == "ROLE_EMPLOYE" %}
                            Employé
                        {% elseif user.roles[0] == "ROLE_EXPERT" %}
                            Expert
                        {% endif %}
                    </td>
                    <td>{{ user.registerDate|date("m/d/Y") }}</td>
                    <td>
                        {% set current = user.lastLogin |date('d-m-Y') %}
                        {% set dateb = "now"|date("m/d/Y") %}
                        {% set difference = date(dateb).diff(date(current)) %}
                        {% set leftDays = difference.days %}
                        {% if leftDays == 0 %}
                            Aujourd'hui
                        {% elseif leftDays == 1 %}
                            il y a un jour
                        {% else %}
                            il y a {{ leftDays }} jours
                        {% endif %}
                    </td>
                    <td>
                        {% if user.enabled == 1 %}
                            <span class="kt-badge kt-badge--success kt-badge--inline kt-badge--pill kt-badge--rounded">Active</span>
                        {% else %}
                            <span class="kt-badge kt-badge--warning kt-badge--inline">En Attente</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="#" class="btn btn-sm btn-clean btn-icon btn-icon-md" title="Modifier">
                            <i class="la la-edit"></i>
                        </a>
                        {% if user.roles[0] == "ROLE_USER" %}
                            <a href="#" class="btn btn-sm btn-clean btn-icon btn-icon-md" title="Promouvoir">
                                <i class="la la-angle-double-up"></i>
                            </a>
                            {% if user.enabled == 1 %}
                                <a href="#" class="btn btn-sm btn-clean btn-icon btn-icon-md" title="Ban">
                                    <i class="la la-ban"></i>
                                </a>
                            {% else %}
                                <a href="#" class="btn btn-sm btn-clean btn-icon btn-icon-md" title="Activer">
                                    <i class="la la-check-circle-o"></i>
                                </a>
                            {% endif %}

                        {% elseif user.roles[0] == "ROLE_EXPERT" or user.roles[0] == "ROLE_EMPLOYE"  %}
                            <a href="#" class="btn btn-sm btn-clean btn-icon btn-icon-md" title="Rétrograder">
                                <i class="la la-angle-double-down"></i>
                            </a>
                        {% endif %}

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <!--end: Datatable -->
    </div>
{% endblock content %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('back/assets/vendors/custom/datatables/datatables.bundle.js') }}"
            type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('#kt_table_2').DataTable();
        });
    </script>
{% endblock %}