{% extends 'baseAdmin.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('back/assets/vendors/custom/datatables/datatables.bundle.css') }}" rel="stylesheet"
          type="text/css"/>

{% endblock %}

{% block content %}
    <div class="kt-portlet__body">

        <!--begin: Datatable -->
        <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_2">
            <thead>
            <tr>
                <th>ID</th>
                <th>{{ 'form.email'|trans({}, 'FOSUserBundle') }}</th>
                <th>{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</th>
                <th>Rôle</th>
                <th>Date D'insciption</th>
                <th>Dernière Connexion</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.username }}</td>
                    <td>
                        {% if user.roles[0] == "ROLE_USER" %}
                            Client
                        {% elseif user.roles[0] == "ROLE_SUPER_ADMIN" %}
                            Administrateur
                        {% elseif user.roles[0] == "ROLE_EMPLOYE" %}
                            Employé
                        {% elseif user.roles[0] == "ROLE_EXPERT" %}
                            Expert
                        {% endif %}
                    </td>
                    <td>{{ user.registerDate|date("m/d/Y") }}</td>
                    <td>
                        {% set current = user.lastLogin |date('d-m-Y') %}
                        {% set dateb = "now"|date("m/d/Y") %}
                        {% set difference = date(dateb).diff(date(current)) %}
                        {% set leftDays = difference.days %}
                        {% if leftDays == 0 %}
                            Aujourd'hui
                        {% elseif leftDays == 1 %}
                            il y a un jour
                        {% else %}
                            il y a {{ leftDays }} jours
                        {% endif %}
                    </td>
                    <td>
                        {% if user.enabled == 1 %}
                        <span class="kt-badge kt-badge--success kt-badge--inline kt-badge--pill kt-badge--rounded">Active</span>
                        {% else %}
                            <span class="kt-badge kt-badge--warning kt-badge--inline">Inactive</span>
                        {% endif %}
                    </td>
                    <td>
                        {#{% if user.facebookId is not empty %}
                            <span class="kt-badge kt-badge--brand kt-badge--inline kt-badge--pill kt-badge--rounded">Facebook</span>
                            {% else %}
                                {% if user.roles[0] == "ROLE_SUPER_ADMIN" %}
                                    <span class="kt-badge kt-badge--dark kt-badge--inline kt-badge--pill kt-badge--rounded">Admin</span>
                                {% else %}
                                    {% if user.enabled == 1 %}
                                        <a href="#" class="btn btn-sm btn-clean btn-icon btn-icon-md" title="Ban">
                                            <i class="la la-ban"></i>
                                        </a>
                                    {% else %}
                                        <a href="#" class="btn btn-sm btn-clean btn-icon btn-icon-md" title="Activer">
                                            <i class="la la-check-circle-o"></i>
                                        </a>
                                    {% endif %}
                                    {% if user.roles[0] == "ROLE_USER" %}
                                        <a href="{{ path('promoteEmp',{'id':user.id}) }}" class="btn btn-sm btn-clean btn-icon btn-icon-md" title="Promouvoir Employé">
                                            <i class="la la-angle-double-up"></i>
                                        </a>
                                        <a href="{{ path('promoteExp',{'id':user.id}) }}" class="btn btn-sm btn-clean btn-icon btn-icon-md" title="Promouvoir Expert">
                                            <i class="la la-angle-up"></i>
                                        </a>
                                    {% elseif user.roles[0] == "ROLE_EMPLOYE" or user.roles[0] == "ROLE_EXPERT" %}
                                        <a href="#" class="btn btn-sm btn-clean btn-icon btn-icon-md" title="Rétrograder">
                                            <i class="la la-angle-double-down"></i>
                                        </a>
                                    {% endif %}
                                {% endif %}
                        {% endif %}#}
                        <span class="dropdown">
                            <a href="#" class="btn btn-sm btn-clean btn-icon btn-icon-md" data-toggle="dropdown" aria-expanded="true">
                              <i class="la la-ellipsis-h"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" href="#"><i class="la la-edit"></i> Edit Details</a>
                                <a class="dropdown-item" href="#"><i class="la la-leaf"></i> Update Status</a>
                                <a class="dropdown-item" href="#"><i class="la la-print"></i> Generate Report</a>
                            </div>
                        </span>
                        <a href="#" class="btn btn-sm btn-clean btn-icon btn-icon-md" title="View" data-toggle="modal" data-target="#exampleModalCenter">
                            <i class="la la-eye"></i>
                        </a>
                        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLongTitle">Informations Clients</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true"></span>
                                        </button>
                                    </div>
                                    <div class="modal-body" align="middle">
                                        <p>{{ 'form.email'|trans({}, 'FOSUserBundle') }} : <b>{{ user.email }}</b>
                                        <p>{{ 'security.login.username'|trans({}, 'FOSUserBundle') }} : <b>{{ user.username }}</b>
                                        <p>Nom et Prénom : <b>{{ user.lastName|upper }}</b> <b>{{ user.firstName }}</b>
                                        <p>Adresse : <b>{{ user.address }}</b>
                                        <p>Sexe : <b>{{ user.gender }}</b>
                                        <p>Date D'inscription : <b>{{ user.registerDate|date("m/d/Y") }}</b>
                                        <p>Statut : {% if user.enabled == 1 %}
                                                <span class="kt-badge kt-badge--success kt-badge--inline kt-badge--pill kt-badge--rounded">Active</span>
                                            {% else %}
                                                <span class="kt-badge kt-badge--warning kt-badge--inline">Inactive</span>
                                            {% endif %}
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-primary" data-dismiss="modal">Fermer</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <!--end: Datatable -->
    </div>
{% endblock content %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('back/assets/vendors/custom/datatables/datatables.bundle.js') }}"
            type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('#kt_table_2').DataTable();
        });
    </script>
{% endblock %}