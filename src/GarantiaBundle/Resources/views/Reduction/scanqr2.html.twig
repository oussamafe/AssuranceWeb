
{% extends 'baseAdmin.html.twig' %}
{% block content %}
    <br> <br><br><br><span style="color:#D68910;font-weight:bold">
                       <div  style="display: grid; padding-right: 50px;  padding-left: 800px;">
                           <h4><b>{{ m }}
                                   {{ m2 }}</b></h4>
                       </div>
                          </span>
<head>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://rawgit.com/schmich/instascan-builds/master/instascan.min.js"></script>
</head>
<body>

<table>
    <TR>
        <video id="preview"></video> <h2   style="display: block; padding-right: 100px;  padding-left: 800px;">

            <h2/>
        <td>

            <script type="text/javascript">

                let scanner = new Instascan.Scanner({ video: document.getElementById('preview') });
                scanner.addListener('scan', function (content) {
                    alert(content);
                });
                Instascan.Camera.getCameras().then(function (cameras) {
                    if (cameras.length > 0) {
                        scanner.start(cameras[0]);
                    } else {
                        console.error('No cameras found.');
                    }
                }).catch(function (e) {
                    console.error(e);
                });
            </script>


        </td>

        <td style="display: block; padding-right: 50px;  padding-left: 150px;">

            <form action="/"  enctype="multpart/form-data" method="post" id="form">

                <div class="form-group ">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Entrer le Qrcode">
                        <div class="input-group-append">
                            <input type="submit" a href="{{ path('_VerifierQrcode',{ 'id': e.id,'qr':'aaa'}) }}" id="btn" class="btn btn-primary btn-sm" />
                        </div>

                    </div>
                </div>


            </form>


        </td>




    </TR>
</table>






</body>

{% endblock content %}










