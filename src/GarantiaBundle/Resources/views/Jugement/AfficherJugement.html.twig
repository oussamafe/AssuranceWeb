
{%  extends 'baseAdmin.html.twig' %}



{% block content %}
    <body>
    <div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
        <div class="row">
            <div class="col-lg-6">



                <div class="kt-section__content">
                    <table class="table">
                        <thead class="thead-light">
                        <tr>
                            <th>NOM DU CLIENT</th>
                            <th>OBSERVATION</th>
                            <th>VERDICT</th>


                            <th>Modifier</th>
                            <th>Supprimer</th>
                        </tr>
                        </thead>
                        <tbody>



                        {% for jugement in jugements %}
                            <tr>
                                <td>{{ jugement.idIncident.idClient }}</td>


                                <td>{{ jugement.Observation() }}</td>
                                <td>{{ jugement.Verdict() }}</td>

                                <td><button type="button" class="btn btn-warning" ><a href ="{{ path('_modifierjugement',{'id':jugement.id}) }}">Modifier</a></button></td>
                                <td><button type="button" class="btn btn-danger" > <a href ="{{ path('_supprimerjugement',{'id':jugement.id}) }}">Supprimer</a></button></td>





                            </tr>
                        {% endfor %}









                        </tbody>
                    </table>
                </div>
            </div>




        </div>


    </div>

    </div>
    </div>

    </body>
{% endblock %}
