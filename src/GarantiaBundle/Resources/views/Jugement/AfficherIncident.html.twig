
{%  extends 'base.html.twig' %}



{% block content %}
<section id="intro1" class="clearfix">
</section><!-- #intro -->
<section id="testimonials" class="clearfix"/>
    <div class="container">

    <body>

    <div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
        <div class="row">
            <div class="col-lg-6">



                <div class="kt-section__content">
                    <table  class="table">

                        <thead class="thead-light">
                        <tr>
                            <th>DATE INCIDENT</th>
                            <th>IMAGE 1</th>
                            <th>IMAGE 2</th>
                            <th>IMAGE 3</th>
                            <th>COMMENTAIRE</th>



                            <th>Modifier</th>
                            <th>Supprimer</th>
                        </tr>
                        </thead>
                        <tbody>



                        {% for incident in incidents %}
                            <tr>
                                <td>{{incident.dateIncident|date('Y-m-d') }}</td>


                                <td>{{ incident.image1() }}</td>
                                <td>{{ incident.image2()}}</td>
                                <td>{{ incident.image3() }}</td>


                                <td>{{ incident.commentaire() }}</td>
                                <td><button type="button" class="btn btn-warning" ><a href ="{{ path('_modifierincident',{'id':incident.id}) }}">Modifier</a></button></td>
                                <td><button type="button" class="btn btn-danger" > <a href ="{{ path('_supprimerincident',{'id':incident.id}) }}">Supprimer</a></button></td>








                            </tr>
                        {% endfor %}









                        </tbody>
                    </table>
                </div>
            </div>




        </div>


    </div>

    </div>
    </div>

    </body>
{% endblock %}
