{% extends "UserBundle::layout1.html.twig" %}
{% block body %}

    <div id="content">
    <div id="content-header">
        <div id="breadcrumb"><a href="{{ path('Dashboard') }}" title="Go to Home" class="tip-bottom"><i
                        class="icon-home"></i> Home</a> <a href="">Départements</a> <a
                    href="{{ path('departement_homepage') }}" class="current">Modifier Département</a></div>
        <h1>Modifier Département</h1>
    </div>
    <div class="container-fluid">
        <hr>
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title"><span class="icon"> <i class="icon-info-sign"></i> </span>
                        <h5>Modifier Départements</h5>
                    </div>
                    <div class="widget-content nopadding">
                        <h6>Modifier Nom</h6>
                        {{ form_start(form) }}
                        <div class="control-group">

                            <div class="controls">
                                {{ form_widget(form.nom) }} </div>
                        </div>
                        <div class="control-group">
                            <h6>Modifier Description</h6>
                            <div class="controls">{{ form_widget(form.description) }} </div>
                        </div>
                        <div class="control-group">
                            <h6>Modifier l'image de département</h6>
                            <div class="controls">{{ form_widget(form.file) }} </div>
                        </div>
                        <div class="form-actions">
                            {{ form_widget(form.Save) }}
                            {{ form_end(form) }}
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>


{% endblock %}