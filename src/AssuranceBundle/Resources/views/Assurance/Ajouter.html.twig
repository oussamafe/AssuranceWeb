                                <div class="col-9">
                                    {{ form_widget(form.champ4 , {'attr': {'class': 'form-control' }}) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-3 col-form-label">Critere 1 :</label>
                                <div class="col-9">
                                    {{ form_widget(form.critere1 , {'attr': {'class': 'form-control' }}) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-3 col-form-label">Devis 1 :</label>
                                <div class="col-9">
                                    {{ form_widget(form.devis1 , {'attr': {'class': 'form-control' }}) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-3 col-form-label">Critere 2 :</label>
                                <div class="col-9">
                                    {{ form_widget(form.critere2 , {'attr': {'class': 'form-control' }}) }}
