                            </div>
                            <div class="form-group row">
                                <label class="col-3 col-form-label">Devis 2 :</label>
                                <div class="col-9">
                                    {{ form_widget(form.devis2 , {'attr': {'class': 'form-control' }}) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-3 col-form-label">Critere 3 :</label>
                                <div class="col-9">
                                    {{ form_widget(form.critere3 , {'attr': {'class': 'form-control' }}) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-3 col-form-label">Devis 3 :</label>
                                <div class="col-9">
                                    {{ form_widget(form.devis3 , {'attr': {'class': 'form-control' }}) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-3 col-form-label">Critere 4 :</label>
                                <div class="col-9">
                                    {{ form_widget(form.critere4 , {'attr': {'class': 'form-control' }}) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-3 col-form-label">Devis 4 :</label>
                                <div class="col-9">
                                    {{ form_widget(form.devis4 , {'attr': {'class': 'form-control' }}) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-3 col-form-label">Prix Initial : </label>
                                <div class="col-9">
                                    {{ form_widget(form.prixInitial , {'attr': {'class': 'form-control' }}) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-3 col-form-label">Image :</label>
                                <div class="col-9">
                                    {{ form_widget(form.image , {'attr': {'class': 'form-control' }}) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-3 col-form-label"> Description : </label>
                                <div class="col-9">
                                    {{ form_widget(form.description , {'attr': {'class': 'form-control' }}) }}
                                </div>
                            </div>
                            {{ form_widget(form) }}
                            <input type="submit" class="btn btn-brand" value="Ajouter"/>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}




