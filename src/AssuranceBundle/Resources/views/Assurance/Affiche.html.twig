{% extends 'baseAdmin.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('back/assets/vendors/custom/datatables/datatables.bundle.css') }}" rel="stylesheet"
          type="text/css"/>

{% endblock %}
{% block content %}


    <div class="kt-portlet__body">

        {% if not message is null %}
            <span class="badge badge-danger">Impossible de supprimer ce type d'assurance</span>

        {% endif %}

        <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_2">
            <thead>
            <tr>
                <th>id</th>
                <th>nom</th>
                <th>champs1</th>
                <th>champs2</th>
                <th>champs3</th>
                <th>champs4</th>
                <th>critere1</th>
                <th>devis1</th>
                <th>critere2</th>
                <th>devis2</th>
                <th>critere3</th>
                <th>devis3</th>
                <th>critere4</th>
                <th>devis4</th>
                <th>prix</th>
                <th>image</th>
                <th>description</th>
                <th>supprimer</th>
                <th>modifier</th>
            </tr>
            </thead>
            <tbody>
            {% for l in m %}
                <tr>
                    <td>{{ l.id }}</td>
                    <td>{{ l.nom }}</td>
                    <td>{{ l.Champ1 }}</td>
                    <td>{{ l.Champ2 }}</td>
                    <td>{{ l.Champ3 }}</td>
                    <td>{{ l.Champ4 }}</td>
                    <td>{{ l.Devis1 }}</td>
                    <td>{{ l.Critere1 }}</td>
                    <td>{{ l.Devis2 }}</td>
                    <td>{{ l.Critere2 }}</td>
                    <td>{{ l.Devis3 }}</td>
                    <td>{{ l.Critere3 }}</td>
                    <td>{{ l.Devis4 }}</td>
                    <td>{{ l.Critere4 }}</td>
                    <td>{{ l.PrixInitial }}</td>
                    <td>{{ l.Image }}</td>
                    <td>{{ l.Description }}</td>
                    <td><a href="{{ path('esprit_test_supprimer',{'id':l.id}) }}">supprimer</a></td>
                    <td><a href="{{ path('esprit_test_modifier',{'id':l.id}) }}">modifier</a></td>
                </tr>
            {% endfor %}
            </tbody>
            <div class="navigation">
                {{ knp_pagination_render(m) }}
            </div>
        </table>
    </div>

{% endblock content %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('back/assets/vendors/custom/datatables/datatables.bundle.js') }}"
            type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('#kt_table_2').DataTable();
        });
    </script>

{% endblock %}
